<p id="notice"><%= notice %></p>

<h3 class="title is-3">Produtos</h3>


<table class="table is-striped is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Preco</th>
      <th>Categoria</th>
      <th>Marca</th>
      <th>Tipo de pet</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.descricao %></td>
        <td><%= produto.preco %></td>
        <td><%= produto.categoria %></td>
        <td><%= produto.marca %></td>
        <td><%= produto.tipoPet %></td>
        <td><%= button_to "Mostrar", produto, class: "button is-link is-small", :method => :get %></td>
        <td><%= button_to "Editar", edit_produto_path(produto), class: "button is-info is-small", :method => :get %></td>
        <td><%= button_to "Remover", produto, class: "button is-danger is-small", :method => :delete, data: { confirm: 'VocÃª tem certeza?' }%></tr>
    <% end %>
  </tbody>
</table>
<br>

<div style="padding: 1.5em;">
  <%= button_to "Novo Produto", new_produto_path, class: "button is-info is-outlined", :method => :get %>
</div>

